# This is Git's per-user configuration file.
[user]
	name = Martin Angers
	email = martin.n.angers@gmail.com
	signingKey = D318CA2B
[alias]
	co = checkout
	st = status
	ci = commit -m
	br = branch
	ad = !git add -A && git status
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	pom = push origin master
	po = push origin
	dt = difftool
	unmerged = "!f() { git log $1 ^$(git rev-parse --abbrev-ref HEAD); }; f"
    rmmerged = "!git branch --merged | grep -v '\\*' | grep -v master | grep -v staging | xargs -n 1 git branch -d"

[color]
	ui = true

[diff]
	tool = vimdiff

[difftool]
	prompt = true
[http "https://git.2zx1.flynnhub.com"]
	sslCAInfo = /Users/m/.flynn/ca-certs/flynn-1470505450.pem
[credential "https://git.2zx1.flynnhub.com"]
	helper = /usr/local/bin/flynn git-credentials
[commit]
	gpgSign = true
