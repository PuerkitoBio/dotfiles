### linux-only patches
if [[ "${OS_SHORT_NAME}" == "linux" ]]; then

  ### add manually built swift binaries to the PATH
  declare swift_manual_bin_dir="${HOME}/src/github.com/apple/swift-source/build/Ninja-RelWithDebInfoAssert/swift-linux-x86_64/bin"
  if [[ -d "${swift_manual_bin_dir}" ]]; then
    PATH=$PATH:${swift_manual_bin_dir}
  fi

fi

### darwin-only patches
if [[ "${OS_SHORT_NAME}" == "darwin" ]]; then
  PATH=${PATH}:${HOME}/src/go/bin
fi
